<h2>Edit Historical Landmark</h2>
<form action='/landmarks/<%= @landmark.id %>' method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH"> 
    <p><label for="name">Name: </label>
    <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>""></p>

    <p><label for="year_completed">Year completed: </label>
    <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed%>"></p>

    <p><input type="submit" value="Edit Landmark"></p>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
