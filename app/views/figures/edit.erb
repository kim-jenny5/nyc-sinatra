<h1>Update Figure</h1>
<br>
<form action="/figures/<%= @figure.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="figure_name">Name: </label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

    <label><h3>Titles</h3></label>
    <% @titles.each do |title| %>
        <input type="checkbox" id="<%= title.name%>" name="figure[title_ids][]" value="<%= title.id %>" <%="checked" if @figure.titles.include?(title) %>>
        <label for="<%= title.id%>"><%= title.name %></label>
        <br>
    <% end %>

    <label for="new_title"><h4>Add New Title:</h4></label>
    <input type="text" name="title[name]" id="new_title">

    <label><h3>Landmarks</h3></label>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" id="<%= landmark.name %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%="checked" if @figure.landmarks.include?(landmark) %>>
        <label for="<%= landmark.id %>"> <%= landmark.name %> </label>
        <br>
    <% end %>

    <label for="new_landmark"><h4>Add New Landmark:</h4></label>
    <input type="text" name="landmark[name]" id="new_landmark">


    <p><input type="submit" value="Edit Figure"></p>

</form>